            <TextView
                android:id="@+id/saida_cidade"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Santo Antonio de Jesus"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
